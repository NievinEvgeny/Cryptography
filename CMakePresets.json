{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 1
    },
    "configurePresets": [
        {
            "name": "base",
            "generator": "Ninja",
            "hidden": true
        },
        {
            "name": "crypt",
            "inherits": "base",
            "binaryDir": "${sourceDir}/build/crypt",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "tests",
            "inherits": "base",
            "binaryDir": "${sourceDir}/build/tests",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "crypt",
            "configurePreset": "crypt",
            "jobs": 4,
            "targets": "cryptography"
        },
        {
            "name": "tests",
            "configurePreset": "tests",
            "jobs": 4,
            "targets": "tests"
        }
    ],
    "testPresets": [
        {
            "name": "tests",
            "configurePreset": "tests"
        }
    ]
}